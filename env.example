# Rename this file to .env.local (recommended for Next.js) or .env

# Gmail IMAP (optional; if set, /api/inbox will proxy to Gmail-backed inbox)
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_REDIRECT_URI=
GMAIL_REFRESH_TOKEN=

# Local storage / database
DATABASE_PATH=

# Retention for free inbox (hours)
FREE_RETENTION_HOURS=

# Optional encryption key (base64, 32 bytes after decoding)
ENCRYPTION_KEY=

# Premium
PREMIUM_ACCESS_CODES=

# Public (exposed to browser)
NEXT_PUBLIC_ADSENSE_CLIENT=
NEXT_PUBLIC_ADSENSE_SLOT=
NEXT_PUBLIC_CHECKOUT_URL=
NEXT_PUBLIC_PREMIUM_CHECKOUT_URL=
